{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block titre %}
<h1>Inscription</h1>
{% endblock %}

{% block main %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo, {
            label: 'Pseudo'
        }) }}
